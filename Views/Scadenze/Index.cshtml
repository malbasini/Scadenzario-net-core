@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Scadenzario.Models.ViewModels.Scadenze.ScadenzaListViewModel
    <br>
    <br>
        <div class="container">
          <div class="alert alert-success">
              <h2 style="text-align: center"><b>@ViewData["Title"]</b></h2>
          </div>
      </div>   
    <br>
    @if(TempData["Message"] != null)
    {
        <div class="container">
                <div class="alert alert-dark">
                    <h2 style="text-align: center"><b>@TempData["Message"]</b></h2>
                </div>
        </div> 
    }
    <br>
    <div class="row">
        <div class="col-md-7">
            <div class="row">
                <div class="input-group">
                    <div class="input-group-append">
                        <a class="btn btn-outline-primary btn-sm" asp-action="Create" asp-controller="Scadenze"><i class="fas fa-plus-circle"></i> Nuova Scadenza</a>&nbsp;&nbsp;&nbsp;
                    </div>
                    <div class="input-group-append">
                        <a class="btn btn-outline-primary btn-sm"
                           target="_blank"
                           asp-controller="Scadenze"
                           asp-action="GraficoCategorie"
                           asp-route-anno="@Model.AnnoSelezionato"
                           asp-route-filter=@Model.Input.Search>
                            <i class="fa-solid fa-chart-bar"></i>
                            Spese per beneficiario
                        </a>
                    </div>
                    <div class="input-group-append">
                        <form method="get" asp-controller="Scadenze" asp-action="Index" class="mb-3">
                            <select id="anno" name="anno" onchange="this.form.submit()" class="form-select form-select-sm mb-3 ms-3" aria-label="Small select example">
                                @foreach (var y in Model.Anni)
                                {
                                    <option value="@y" selected="@(y == Model.AnnoSelezionato ? "selected" : null)">@y</option>
                                }
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5 flex flex-row-reverse">
            <form asp-controller="Scadenze" asp-action="Index" method="GET">
                <div class="input-group">
                    <b style="text-align: center;">Beneficiario/Data Scadenza</b>&nbsp;&nbsp;&nbsp;<input type="text" name="search" class="form-control" placeholder="Cerca..." aria-label="Cerca..." aria-describedby="search-button" value="@Model.Input.Search">
                    <button class="input-group-text" id="search-button"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
    <br>
    <br>
    <div class="table-responsive-md">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col"><order-link-scadenza order-by="Denominazione" Input="@Model.Input">Beneficiario</order-link-scadenza></th>
                    <th scope="col"><order-link-scadenza order-by="DataScadenza" Input="@Model.Input">Data Scadenza</order-link-scadenza></th>
                    <th scope="col"><order-link-scadenza order-by="Importo" Input="@Model.Input">Importo</order-link-scadenza></th>
                    <th scope="col">Giorni Ritardo</th>
                    <th scope="col">Data Pagamento</th>
                    <th scope="col">Sollecito</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

            @{
                System.Diagnostics.Debug.Assert(Model.Scadenze?.Results != null, "Model.Scadenze?.Results != null");
            }
            @foreach (var item in Model.Scadenze.Results)
                {
                     <partial name="Scadenze/_ScadenzaLine" model=@item></partial>
                }
            </tbody>
        </table>
    </div>
   <br>
   <br>
    <vc:pagination-bar model="@Model"></vc:pagination-bar>
                
            

