 @using Microsoft.AspNetCore.Mvc.TagHelpers 
 @model Scadenzario.Models.ViewModels.Scadenze.ScadenzaViewModel
 <tr>
                        <td>
                             @Html.DisplayFor(modelItem => Model.Denominazione)
                        </td>
                        <td>
                           @Html.DisplayFor(modelItem => Model.DataScadenza)
                        </td>
                         <td>
                              @if (Model.Importo > 0)
                              {
                                  decimal a = Model.Importo;
                                  <font color="red">
                                      @{
                                          @a
                                      }
                                  </font>
                              }
                         </td>
                        <td>
                            @if (Model.GiorniRitardo < 0)
                            {
                                int appoggio = @Math.Abs((int)Model.GiorniRitardo);
                                <font color="ff0000">
                                @{
                                    @appoggio
                                }
                                </font>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => Model.GiorniRitardo)
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.DataPagamento)
                        </td>
                         <td>
                             @Html.DisplayFor(modelItem => Model.Sollecito)
                         </td>
                         <td>
                             <div class="d-flex align-items-center">
                                 <a class="btn btn-outline-primary" asp-action="Detail" asp-controller="Scadenze" asp-route-id = "@Model.IDScadenza">Dettaglio</a>
                             </div>
                         </td>
                         <td>
                             <div class="dropdown">
                                 @{
                                     Console.WriteLine("Dentro TD");
                                 }
                                 @if (Model.Status != null && !Model.Status.Equals("pagata".ToUpper()))
                                 {
                                     <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                         Paga
                                     </button>
                                 }
                                 <ul class="dropdown-menu">
                                     <li><a class="dropdown-item" href="https://www.pagopa.gov.it/" target="_blank">PagoPA</a></li>
                                     <li><a class="dropdown-item" asp-controller="Scadenze" asp-action="PayPayPal" asp-route-id="@Model.IDScadenza">Paypal</a></li>
                                     <li><a class="dropdown-item" asp-controller="Scadenze" asp-action="PayStripe" asp-route-id="@Model.IDScadenza">Stripe</a></li>
                                 </ul>
                                 @if (Model.Status != null && Model.Status.Equals("pagata".ToUpper()))
                                 {
                                     <button class="btn btn-success" type="button" aria-expanded="false">
                                         Pagata
                                     </button>
                                 }
                             </div>
                         </td>
                    </tr>